<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/onboarding_padding">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/onboarding_padding">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/onboarding_padding"
                android:layout_marginBottom="@dimen/onboarding_padding"
                android:textAppearance="@style/TextAppearance.Gateway.Heading1"
                android:textIsSelectable="true"
                tools:text="@string/onboarding_title_1" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1dp"
                android:textAppearance="@style/TextAppearance.Gateway.Body"
                android:textIsSelectable="true"
                android:textSize="18sp"
                tools:text="@string/onboarding_text_1" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/onboarding_padding"
                android:importantForAccessibility="no"
                tools:src="@drawable/onboarding_image_1" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/onboarding_padding"
        android:layout_marginBottom="56dp"
        android:text="@string/onboarding_action" />

</LinearLayout>
