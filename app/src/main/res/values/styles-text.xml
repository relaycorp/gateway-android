<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.Gateway.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.Gateway.Title" parent="TextAppearance.MaterialComponents.Headline6" tools:ignore="UnusedResources">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Gateway.Body" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Gateway.Body2" parent="TextAppearance.MaterialComponents.Body2" tools:ignore="UnusedResources">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Gateway.CardTitle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="TextAppearance.Gateway.Heading1" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Gateway.Heading2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>
